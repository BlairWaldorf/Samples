<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".basic.textview.example.MainActivity">

    <!--TextView 1-->
    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="This is my First TextView"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <!--TextView 2 (Text with Bold Style)-->
    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="This is my Second TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!--TextView 3 (Text with Italic Style)-->
    <TextView
        android:id="@+id/TextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="This is my Third TextView"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"
        android:textStyle="italic" />

    <!--TextView 4 (Text with Caps On)-->
    <TextView
        android:id="@+id/TextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="This is my Forth TextView"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_purple"
        android:textSize="26sp" />

</LinearLayout>